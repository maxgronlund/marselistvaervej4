<h1>Listing bookings</h1>

<table>
  <tr>
    <th>Meetingroom</th>
    <th>Starttime</th>
    <th>Endtime</th>
    <th>Attendees</th>
    <th>Coffee and bread</th>
    <th>Bookers name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.meetingroom.title %></td>
    <td><%= booking.starttime %></td>
    <td><%= booking.endtime %></td>
    <td><%= booking.attendees %></td>
    <td><%= booking.coffee_and_bread %></td>
    <td><%= booking.bookers_name %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    <td><%= link_to 'Destroy', booking, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% if can_edit? %> 
    <br />
    <%= link_to 'New Booking', new_meetingroom_booking_path(@meetingroom) %>
<%end%>
