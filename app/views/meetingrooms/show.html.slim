.grid-container

  .squared-box
    .borders
      .menu-box
        = render :partial => "shared/menu"
      .content
        h1
          =raw @meetingroom.title
        =raw @meetingroom.body      
	    - if can?(:edit, @meetingroom)
	      .text-right
	        = link_to t('admin.edit'), edit_meetingroom_path(@meetingroom)
	        |  | 
	        = link_to t('admin.delete'), @meetingroom, :confirm => t('admin.are_you_sure'), :method => :delete
	       

  .squared-box
    .borders
      div style="width:458px; height:376px; overflow:hidden"
        = image_tag @meetingroom.image.url(:preview), :border => 'none', :class => 'image_fix'

  .bottom-box
    .borders
      .left-side
        .menu-box
          .menu-back
            h2
              | Booking
        .booking-box
          = link_to 'book m√∏delokale', new_meetingroom_booking_path(@meetingroom)
          - if can_edit?
            br
            = link_to 'bookings', meetingroom_bookings_path(@meetingroom)
      .right-side
        | da
      


